use std::future;

pub async fn generate_prompt(context) {
    let results = future::join([
        { async || ("hostname", context.hostname().await) }(),
        { async || ("username", context.username().await) }(),
    ]).await;

    let data = #{};
    for result in results {
        data[result.0] = result.1;
    }

    `${context.shell().to_string()} [${data.username}@${data.hostname}] \$ `
}
